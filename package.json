{
  "name": "thumbnail-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "clean": "rm -r dist thumbnail-api.zip 2> /dev/null ; exit 0",
    "start": "node dist/src/app.js",
    "lint": "npx eslint",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "test": "ava -v -T 2m src/unit.test.ts",
    "integration": "ava -v -T 2m src/integration.test.ts",
    "zip": "zip -r thumbnail-api.zip dist node_modules package-lock.json package.json",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org dpla --project thumbnail-api ./dist && sentry-cli sourcemaps upload --org dpla --project thumbnail-api ./dist"
  },
  "dependencies": {
    "@types/express": "^4.17.8",
    "express": "^4.21.2",
    "@aws-sdk/client-s3": "^3.716.0",
    "@aws-sdk/client-sqs": "^3.716.0",
    "@aws-sdk/s3-request-presigner": "^3.716.0",
    "@opensearch-project/opensearch": "^2.13.0",
    "@sentry/cli": "^2.39.1",
    "@sentry/node": "^8.47.0",
    "@sentry/profiling-node": "^8.47.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "ava": "^6.2.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
